# =============================================================================
# ARQUIVO .ENV - CONFIGURAÇÕES DE AMBIENTE
# =============================================================================
# Este arquivo contém todas as variáveis de ambiente utilizadas no application.properties
# Copie este arquivo para .env.local ou .env.prod conforme necessário

# =============================================================================
# CONFIGURAÇÕES DE BANCO DE DADOS - SQL SERVER (PRINCIPAL)
# =============================================================================
DB_USERNAME=SA
DB_PASSWORD=Pass@word
DB_JDBC_URL=jdbc:sqlserver://smartinvest-db:1433;databaseName=master;encrypt=false;trustServerCertificate=true
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_SIZE=5
DB_ACQUISITION_TIMEOUT=10
DB_LEAK_DETECTION=10M
DB_GENERATION_STRATEGY==drop-and-create

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
LOG_CONSOLE_ENABLED=true

# =============================================================================
# CONFIGURAÇÕES DE HTTP
# =============================================================================
HTTP_PORT=8080
HTTP_HOST=0.0.0.0
QUARKUS_HTTP_ADVERTISED_HOST=localhost

# =============================================================================
# CONFIGURAÇÕES DE SWAGGER/OPENAPI
# =============================================================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/q/swagger-ui
QUARKUS_SWAGGER_UI_ALWAYS_INCLUDE=true

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO E MÉTRICAS
# =============================================================================
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true
PROMETHEUS_PATH=/metrics

# =============================================================================
# CONFIGURAÇÕES DE HEALTH CHECK
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_OPENAPI_INCLUDED=true

# =============================================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =============================================================================
THREAD_POOL_CORE=8
THREAD_POOL_MAX=30
THREAD_POOL_QUEUE=1000

# =============================================================================
# CONFIGURAÇÕES DE TIMEOUT
# =============================================================================
HTTP_READ_TIMEOUT=30S
HTTP_IDLE_TIMEOUT=30S

# =============================================================================
# CONFIGURAÇÕES DO KEYCLOAK
# =============================================================================
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_CLIENT_SECRET=8f2e9d4a-7b3c-4e8f-9a1b-6c5d8e7f2a9b



